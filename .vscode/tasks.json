{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build with GMP (UCRT64)",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // --- Include Paths ---
                "-I${workspaceFolder}/include",
                "-IC:/msys64/ucrt64/include",
                // --- Input Source Files ---
                "${workspaceFolder}/main.cpp",       
                "${workspaceFolder}/src/paillier.cpp", 
                "${workspaceFolder}/src/aes.cpp",
                // --- Output ---
                "-o",
                "${workspaceFolder}/cryptovote.exe",
                // --- Library Paths ---
                "-LC:/msys64/ucrt64/lib",
                // --- Libraries to Link ---
                "-lgmpxx",
                "-lgmp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiles main, Paillier, and AES sources with GMP and project includes/libraries using g++ (UCRT64)."
        }
    ]
}