{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Paillier (UCRT64)", // Name for the debug configuration
            "type": "cppdbg", // Use the C/C++ debugger
            "request": "launch", // We want to launch the program
            "program": "${workspaceFolder}/paillier.exe", // Path to the compiled executable
            "args": [], // Any command-line arguments your program needs when run
            "stopAtEntry": false, // Set to true if you want debugger to stop at main()
            "cwd": "${workspaceFolder}", // Working directory for the running program
            "environment": [],
            "externalConsole": false, // Set to true to see cout/cin in a separate window
                                     // Set to false to use VS Code's integrated terminal
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe", // **IMPORTANT**: Adjust path to your gdb.exe if different
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Paillier with GMP (UCRT64)",
             // **KEY**: Tells VS Code to run your build task before launching
             
        }
    ]
}